{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "glade",
      "type": "shell",
      "command": "python ${config:glade.location}/wxglade.py ${workspaceRoot}/glade1.wxg",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "build phototags executable",
      "type": "shell",
      "command": "pyinstaller -F phototags.py",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build phototags-gui executable",
      "type": "shell",
      "command": "pyinstaller -F --noconsole phototags-gui.py",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}